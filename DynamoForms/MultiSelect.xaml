<Window x:Class="DynamoForms.MultiSelect"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DynamoForms"
             mc:Ignorable="d" Width="400" Height="400">
    <StackPanel Orientation="Vertical">
        <TextBlock x:Name="tb_1" Margin="10,10" FontSize="12" Text="Select multiple from the List Box" />
        <ListBox x:Name="lstBox" Margin="10,10" Width="auto"  Height="270" SelectionMode="Multiple"/>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="btn_Ok" Content="Ok" HorizontalAlignment="Left" Margin="210,10,0,0" Width="75" Click="btn_Ok_Click"/>
            <Button x:Name="btn_Cancel" Content="Cancel" HorizontalAlignment="Right" Margin="20,10,0,0" Width="75" Click="btn_Cancel_Click"/>
        </StackPanel>
        

    </StackPanel>
</Window>
